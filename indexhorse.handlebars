<h1>Horses</h1>

<h2>Horse Database!</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Horse</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Horse Name:</label>
    <input type="text" id="ca" name="name">
  </div>
   <div class="form-group">
    <label for="ca">Sire:</label>
    <input type="text" id="ca" name="sire">1
  </div>
   <div class="form-group">
    <label for="ca">Age:</label>
    <input type="text" id="ca" name="age">
  </div>
  <div class="form-group">
    <label for="sleepy">Active?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Active<br>
    <input type="radio" name="sleepy" value="0"> Non-Active
  </div>
    <div class="form-group">
    <label for="sleepy">Turf?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Turf<br>
    <input type="radio" name="sleepy" value="0"> Dirt
  </div>
   <div class="form-group">
    <label for="ca">Rankings:</label>
    <input type="text" id="ca" name="ranking">
  </div>
   <div class="form-group">
    <label for="ca">Last Earnings:</label>
    <input type="text" id="ca" name="last">
  </div>
   <div class="form-group">
    <label for="ca">Total Earnings:</label>
    <input type="text" id="ca" name="total">
  </div>

  

  <button type="submit">Add Horse</button>
</form>
